<SplashScreen>:
    AnchorLayout:     
        Label:
            anchor_y: 'center'
            anchor_x: 'center'
            valign: 'top'
            size_hint: (.2, 1)
            padding_hint: '5px'
            text: "Welcome to ~Red Moon~"
            text_size: self.width-40, self.height-40
            background: "blue"
        Button:
            size_hint: (.155, .1)
            anchor_x: 'center'
            anchor_y: 'center'
            valign: 'center'
            halign: 'center'
            text: "Login"
            text_size: self.width-40, self.height-40
            background: "grey"
            on_release: root.manager.current = 'LoginScreen'
